{
  "name": "webpack-html-generator-plugin",
  "version": "0.0.1",
  "description": "A webpack plugin to generate html entry for each js entry",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register --recursive ./src/**/*.spec.ts",
    "lint": "tslint ./src/**/*.ts",
    "build": "npm run lint && rm -rf ./lib && tsc",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acrazing/webpack-html-generator-plugin.git"
  },
  "keywords": [
    "webpack",
    "html",
    "generate",
    "generator",
    "plugin"
  ],
  "author": "acrazing <joking.young@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/acrazing/webpack-html-generator-plugin/issues"
  },
  "homepage": "https://github.com/acrazing/webpack-html-generator-plugin#readme",
  "dependencies": {
    "ejs": "^2.5.2",
    "html-minifier": "^3.1.1",
    "path-rewrite-plugin": "0.0.5"
  },
  "devDependencies": {
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "ts-loader": "^1.2.0",
    "typescript": "^2.0.9",
    "webpack": "^1.13.3"
  }
}
