{
  "compilerOptions": {
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "experimentalDecorators": true,
    "allowJs": false,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ],
    "noImplicitAny": true,
    "sourceMap": false
  },
  "exclude": [
    "node_modules",
    "temp",
    "lib",
    "temp",
    "__mock__",
    "dist"
  ]
}